<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0"
    package="org.owasp.mstgkotlin">
    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="26"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:theme="@style/AppTheme"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:debuggable="true"
        android:allowBackup="false"
        android:supportsRtl="true"
        android:roundIcon="@mipmap/ic_launcher_round">
        <activity android:name="org.owasp.mstgkotlin.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="org.owasp.mstgkotlin.RegisterActivity"
            android:parentActivityName="org.owasp.mstgkotlin.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RegisterActivity"/>
        </activity>
        <activity android:name="org.owasp.mstgkotlin.MenuActivity"/>
        <activity android:name="org.owasp.mstgkotlin.SecureWebViewActivity"/>
        <activity android:name="org.owasp.mstgkotlin.InsecureWebViewActivity"/>
        <activity android:name="org.owasp.mstgkotlin.InsecureDeepLinkActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="playground"
                    android:host="open"/>
            </intent-filter>
        </activity>
        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0"/>
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT"/>
    </application>
</manifest>
